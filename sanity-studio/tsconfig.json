{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "lib": ["ES2017", "DOM", "DOM.Iterable"]
  },
  "include": [
    "sanity.config.ts",
    "sanity.cli.ts",
    "schemas/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
